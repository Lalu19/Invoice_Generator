}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    @@page {
        size: A4;
        margin: 0;
    }

    .invoice {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .invoice-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .invoice-logo {
        max-width: 100px;
    }

    .invoice-number {
        text-align: right;
    }

    .invoice-details {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .invoice-address {
        width: 45%;
    }

    .invoice-date {
        width: 45%;
        text-align: right;
    }

    .invoice-info {
        width: 100%;
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        /* Adjust margin to create space between sections */
    }

    .invoice-qr-code {
        max-width: 40%;
        margin-left: auto;
        display: block;
    }

        .invoice-qr-code img {
            width: 63%;
        }
    .invoice-table {
        width: 100%;
        border-collapse: collapse;
    }

        .invoice-table th,
        .invoice-table td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }

    .invoice-total {
        text-align: right;
        margin-top: 20px;
    }

    /* gedeu */
    .invoice-date table {
        width: 100%;
        border-collapse: collapse;
    }

        .invoice-date table td {
            padding: 5px;
            border: none;
        }

            .invoice-date table td:first-child {
                font-weight: bold;
                width: 30%;
                /* Adjust the width of the first column as needed */
            }

            .invoice-date table td:nth-child(2) {
                width: 5%;
                /* Adjust the width of the separator column as needed */
            }

            .invoice-date table td:last-child {
                width: 65%;
                /* Adjust the width of the data column as needed */
            }

    .invoice-total table {
        width: 100%;
        /* Adjust the table width as needed */
        border-collapse: collapse;
        margin-right: 20px;
        /* Add some margin to create space between the table and other content */
    }

    /* Add this CSS at the end of your existing styles */
    /* Updated CSS */
    .invoice-footer {
        margin-top: 20px;
        /* display: flex; */
        justify-content: space-between;
    }

        .invoice-footer .note,
        .invoice-footer .terms {
            width: 48%;
            /* Adjust the width as needed to create space between sections */
            padding: 10px;
        }

        .invoice-footer h3 {
            margin-top: 0;
        }
</style>

